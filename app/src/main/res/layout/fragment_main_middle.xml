<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="org.zack.music.MainMiddleFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/middle_control_whole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/middle_replay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:tint="@color/halfTransparent"
            android:src="@drawable/replay_icon"/>
        <ImageView
            android:id="@+id/middle_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/previous_icon"/>
        <ImageView
            android:id="@+id/middle_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/play_icon"/>
        <ImageView
            android:id="@+id/middle_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:src="@drawable/next_icon"/>
        <ImageView
            android:id="@+id/middle_shuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:tint="@color/halfTransparent"
            android:src="@drawable/shuffle_icon"/>
    </LinearLayout>

<!--    <View
        android:id="@+id/middle_hide_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>-->



    <LinearLayout
        android:id="@+id/middle_bottom_schedule_whole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/middle_control_whole">

        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/middle_line_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dsb_min="0"
            app:dsb_max="100"
            app:dsb_indicatorFormatter="00"
            app:dsb_progressColor="@android:color/white"
            app:dsb_trackColor="@color/halfTransparent"
            app:dsb_indicatorColor="@color/halfTransparent"
            app:dsb_scrubberHeight="2dp"
            app:dsb_trackHeight="2dp"
            app:dsb_thumbSize="0dp"/>


<!--        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/middle_seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bsb_section_count="1"
            app:bsb_track_color="@color/halfTransparent"
            app:bsb_second_track_color="@android:color/white"
            app:bsb_bubble_color="@color/halfTransparent"
            app:bsb_bubble_text_color="@android:color/white"/>-->

        <RelativeLayout
            android:id="@+id/middle_bottom_time_whole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="20dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="04:32"
                android:textSize="20dp"
                android:textColor="@android:color/white"/>
        </RelativeLayout>



    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/middle_bottom_schedule_whole">
<!--        <io.feeeei.circleseekbar.CircleSeekBar
            android:id="@+id/middle_circle_seekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            app:wheel_scroll_only_one_circle="true"
            app:wheel_unreached_color="@color/halfTransparent"
            app:wheel_reached_color="@android:color/white"
            app:wheel_pointer_color="@android:color/transparent"
            app:wheel_reached_width="10dp"
            app:wheel_unreached_width="10dp"/>-->
        <org.zack.music.CircularSeekBar
            android:id="@+id/middle_circle_seekBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:layout_gravity="center"
            app:circle_color="@color/halfTransparent"
            app:circle_progress_color="@android:color/white"
            app:circle_stroke_width="8dp"
            app:pointer_color="@android:color/transparent"
            app:pointer_halo_color="@android:color/transparent"
            app:pointer_halo_color_ontouch="#22FFFFFF"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="60dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04:32"
                android:textSize="60dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/middle_bottom_schedule_whole"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未找到歌词"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:textSize="18dp"/>
    </FrameLayout>


</RelativeLayout>
